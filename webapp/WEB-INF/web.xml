<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>blueProject</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>connection</description>
    <res-ref-name>jdbc/orcl</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <context-param>
    <param-name>PAGE_SIZE</param-name>
    <param-value>9</param-value>
  </context-param>
  <context-param>
    <param-name>PAGING_BLOCK</param-name>
    <param-value>5</param-value>
  </context-param>
  <context-param>
    <param-name>maxPostSize</param-name>
    <param-value>1024000</param-value>
  </context-param>
  <servlet>
    <servlet-name>AlbumBoardWriter</servlet-name>
    <servlet-class>albumBoard.WriteController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AlbumBoardWriter</servlet-name>
    <url-pattern>/albumBoard/write.do</url-pattern>
  </servlet-mapping>
   <servlet>
 	<servlet-name>AlbumBoard</servlet-name>
 	<servlet-class>albumBoard.ListController</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>AlbumBoard</servlet-name>
 	<url-pattern>/albumBoard/list.do</url-pattern>
 </servlet-mapping>
  <servlet>
 	<servlet-name>AlbumBoardView</servlet-name>
 	<servlet-class>albumBoard.ViewController</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>AlbumBoardView</servlet-name>
 	<url-pattern>/albumBoard/view.do</url-pattern>
 </servlet-mapping>
  <servlet>
 	<servlet-name>AlbumBoardEdit</servlet-name>
 	<servlet-class>albumBoard.EditController</servlet-class>
 </servlet>
 <servlet-mapping>
 	<servlet-name>AlbumBoardEdit</servlet-name>
 	<url-pattern>/albumBoard/edit.do</url-pattern>
 </servlet-mapping>
</web-app>